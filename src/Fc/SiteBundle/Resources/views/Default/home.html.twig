{% extends extends %}


{% block blog_title %}Homepage Fantacalcio{% endblock %}

{% block before_body %}
<div id="before_body" class="site_central">
    {% if app.user %}
        Vai al pannello delle tue fantaleghe
    {% else %}    
        <p>Iscriviti al sito per registrarti a una lega o creare la tua!</p>
        
        <a href="{{ path('fos_user_security_login', {"layout":"popup"}) }}" class="button">Login</a> oppure
        <a href="{{ path('fos_user_registration_register', {"layout":"popup"}) }}" class="button">Registrati</a>
    {% endif %}
</div>
{% endblock%}

